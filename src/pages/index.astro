---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header.astro";
---

<Layout>
  <Header />
  <img src="/img/hero.webp" class="hero-img" alt="Hero image" />
</Layout>

<style>
  .hero-img {
    width: 100%;
    height: 580px;
    object-fit: cover;
    display: block;
  }
  @media (max-width: 768px) {
    .hero-img {
      height: auto;
    }
  }
</style>
