<style>
  header {
    background: var(--color-bg, #f2e7c4);
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    padding-bottom: 3rem;
  }

  .nav-left,
  .nav-right {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    padding-top: 55px;
  }

  .logo img {
    height: 40px;
  }

  .nav-right img {
    width: 25px;
    height: auto;
  }

  a {
    text-decoration: none;
    color: black;
    font-size: 0.9rem;
  }

  .dropdown-container {
    display: flex;
    background-color: var(--color-blue, #d0e0ff);
    border-top: 1px solid black;
    border-bottom: 1px solid black;
  }

  .dropdown {
    position: relative;
    flex: 1;
    text-align: center;
    border-right: 1px solid black;
  }

  .dropdown:last-child {
    border-right: none;
  }

  .dropdown button {
    background: none;
    border: none;
    padding: 1rem;
    font-size: 1.2rem;
    cursor: pointer;
    font-family: "JejuMyeongjo", serif;
  }

  .dropdown-content {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition:
      max-height 0.4s ease,
      opacity 0.4s ease;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: var(--color-blue, #d0e0ff);
    z-index: 10;
    border-inline: 1px solid black;
    border-bottom: 1px solid black;
  }

  .dropdown.open .dropdown-content {
    max-height: 500px;
    opacity: 1;
  }

  .dropdown-content a {
    display: block;
    padding: 0.8rem;
    text-decoration: none;
    color: black;
    font-size: 1.1rem;
  }

  .dropdown-content a:hover {
    background-color: var(--color-blue, #c0d8ff);
  }

  .arrow {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .dropdown.open .arrow {
    transform: rotate(180deg);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const dropdowns = document.querySelectorAll(".dropdown");

    dropdowns.forEach((dropdown) => {
      const button = dropdown.querySelector("button");

      button.addEventListener("click", (e) => {
        e.preventDefault();

        const isOpen = dropdown.classList.contains("open");

        dropdowns.forEach((d) => d.classList.remove("open"));

        if (!isOpen) {
          dropdown.classList.add("open");
        }
      });
    });

    document.addEventListener("click", (e) => {
      if (!e.target.closest(".dropdown")) {
        dropdowns.forEach((d) => d.classList.remove("open"));
      }
    });
  });
</script>
